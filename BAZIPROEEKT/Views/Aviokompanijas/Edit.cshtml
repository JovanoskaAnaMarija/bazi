@model BAZIPROEEKT.Models.Aviokompanija

@{
    ViewBag.Title = "Edit";
}

<h2 style="color: burlywood">Измени:</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="color: burlywood">@Model.ime</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_avio)

        <div class="form-group">
            <p style="color: burlywood">
                @Html.LabelFor(model => model.ime, htmlAttributes: new { @class = "control-label col-md-2" })
            </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p style="color: burlywood">
                @Html.LabelFor(model => model.drzava, htmlAttributes: new { @class = "control-label col-md-2" })
         </p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.drzava, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.drzava, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
