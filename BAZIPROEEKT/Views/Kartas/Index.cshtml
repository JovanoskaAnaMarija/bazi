        <td>
            <p style="color:  cadetblue">
                @Html.DisplayFor(modelItem => item.destinacija_do)
                </p>
        </td>
        <td>
            <p style="color:  cadetblue">
                @Html.DisplayFor(modelItem => item.vreme_na_poaganje)
                </p>
        </td>
        <td>
            <p style="color:  cadetblue">
                @Html.DisplayFor(modelItem => item.cena)
                </p>
        </td>
        <td>

            <p style="color: cadetblue">
                @Html.ActionLink("Edit", "Edit", new { id = item.id_karta })
                @Html.ActionLink("Details", "Details", new { id = item.id_karta })
                @Html.ActionLink("Delete", "Delete", new { id = item.id_karta })

            </p>

        </td>
    </tr>
}

</table>
