                @Html.DisplayNameFor(model => model.vreme_na_poaganje)
                </p>
        </th>
        <th>
            <p style="color: burlywood">
                @Html.DisplayNameFor(model => model.cena)
                </p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <p style="color:  cadetblue">
                @Html.DisplayFor(modelItem => item.datum_na_izdavanje)
                </p>
        </td>
        <td>
            <p style="color:  cadetblue">
